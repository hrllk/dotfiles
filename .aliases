function tree() {
  local depth=1
  local mode="all"   # 기본값: 전체
  [[ -n "$1" ]] && depth=$1
  [[ -n "$2" ]] && mode=$2

  if [[ "$mode" == "dirs" ]]; then
    colorls ${dir:-.} -l --tree=${depth} --dirs
  else
    colorls ${dir:-.} -l --tree=${depth} --sd --sf
  fi
}

